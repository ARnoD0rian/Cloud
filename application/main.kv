#:kivy 2.2.0

<MainScreen>:
    TabbedPanel:
        do_default_tab: False

        TabbedPanelItem:
            text: 'authorization'
            AuthorizationScreen:
        
        TabbedPanelItem:
            text: 'file_sending'
            FileUploadScreen:

<FileUploadScreen>:
    orientation: 'vertical'

    #on_enter: root.show_auth_message()

    MDRaisedButton:
        text: 'Choose a file'
        on_release: root.open_file_chooser()

<AuthorizationScreen>: 
    orientation: 'vertical'

    TextInput:
        id: login_input
        hint_text: 'Login'
        size_hint_y: None
        height: '48dp'
    
    TextInput:
        id: password_input
        hint_text: 'Password'
        size_hint_y: None
        height: '48dp'

    MDRaisedButton:
        text: 'Log in'
        on_release: root.send_request()